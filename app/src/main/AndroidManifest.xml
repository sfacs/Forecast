<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.iamanengineer.forecast" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="net.iamanengineer.forecast.ForecastApp"
        android:theme="@style/AppTheme" >

        <activity
            android:name="net.iamanengineer.forecast.views.activities.SettingsActivity"/>
        <activity
            android:name="net.iamanengineer.forecast.views.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
